<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgrondTabLayoutActivity">

    <ImageView
        android:id="@+id/user_recipe_photo"
        android:layout_width="160dp"
        android:layout_height="116dp"
        android:background="@color/tabDividerRed"
        android:scaleType="center" />

    <TextView
        android:id="@+id/user_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/user_recipe_photo"
        android:layout_toRightOf="@+id/user_recipe_photo"
        android:background="@color/backgrondTabLayoutActivity"
        android:fontFamily="sans-serif"
        android:lineSpacingMultiplier="1.2"
        android:minHeight="116dp"
        android:paddingBottom="6dp"
        android:paddingEnd="48dp"
        android:paddingLeft="6dp"
        android:paddingRight="48dp"
        android:paddingStart="6dp"
        android:paddingTop="6dp"
        android:textColor="@color/Black"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:text="Helloworldhelloworldhelloworldhelloworld" />

    <Button
        android:id="@+id/delete_user_recipe"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_delete_ingrs_to_buy" />

    <Button
        android:id="@+id/edit_user_recipe"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/ic_edit" />

    <View
        android:id="@+id/user_recipe_separator"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/user_recipe_name"
        android:background="@color/colorPrimary" />
</RelativeLayout>