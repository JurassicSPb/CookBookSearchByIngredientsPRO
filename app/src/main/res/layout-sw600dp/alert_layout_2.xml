<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/alert_window"
        android:layout_width="220dp"
        android:layout_height="150dp"
        android:layout_gravity="right"
        android:layout_marginTop="25dp"
        android:layout_marginRight="178dp"
        android:alpha="0.92"
        android:scaleType="fitXY"
        android:src="@drawable/alert_window" />

    <ImageView
        android:layout_width="83dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="77dp"
        android:scaleType="fitXY"
        android:src="@drawable/arrow_right_medium" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="86dp"
        android:layout_gravity="right"
        android:layout_marginTop="175dp"
        android:layout_marginRight="275dp"
        android:scaleType="fitXY"
        android:src="@drawable/arrow_down_medium" />

    <Button
        android:id="@+id/close_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:layout_marginRight="160dp"
        android:alpha="0.92"
        android:background="@drawable/close_setting_btn" />

    <TextView
        android:id="@+id/alert_message"
        android:layout_width="220dp"
        android:layout_height="150dp"
        android:layout_gravity="right"
        android:layout_marginTop="25dp"
        android:layout_marginRight="178dp"
        android:gravity="center"
        android:padding="6dp"
        android:text="@string/alert_2"
        android:textColor="@color/Black"
        android:textSize="18sp" />

</FrameLayout>