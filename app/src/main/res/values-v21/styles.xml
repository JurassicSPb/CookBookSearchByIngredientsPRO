<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.Light">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/splash_screen_layers</item>
        <item name = "windowActionBar">false</item>
        <item name = "windowNoTitle">true</item>
    </style>

    <style name="ProgressBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/progressbar_layers</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DetailRecipeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

</resources>
